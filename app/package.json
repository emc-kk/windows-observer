{
    "name": "windows-observer",
    "version": "1.0.0",
    "description": "Windows Observer - HDMI CEC監視アプリケーション",
    "main": "./dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node ./dist/index.js",
        "dev": "tsx watch ./src/index.ts",
        "pm2:start": "npm run build && pm2 start ecosystem.config.cjs",
        "pm2:save": "pm2 save",
        "pm2:resurrect": "pm2 resurrect",
        "pm2:stop": "pm2 stop tv-state-local",
        "pm2:restart": "pm2 restart tv-state-local",
        "pm2:status": "pm2 status",
        "pm2:logs": "pm2 logs tv-state-local"
    },
    "keywords": [
        "hdmi",
        "windows",
        "monitor",
        "observer"
    ],
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "morgan": "^1.10.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "ws": "^8.14.2",
        "pm2": "^5.3.0"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "typescript": "^5.3.0",
        "@types/node": "^20.10.0",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/cors": "^2.8.17",
        "@types/ws": "^8.5.10",
        "ts-node": "^10.9.2",
        "tsx": "^4.7.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}